---
import { getCollection } from "astro:content";
const projects = await getCollection("projectsCollection");

import Layout from "../../layouts/Layout.astro";
import badges from "../../content/techBadges";
import projectImage1 from "../../assets/images/project-banner-1.png";
import ProjectArticle from "../../components/projects/ProjectArticle.astro";
---

<Layout title="Projects | Ryan Bowler">
  <main>
    <!-- WHITESPACE -->
    <div class="h-[150px] sm:h-[200px]"></div>

    <h1 class="font-bold text-7xl px-5 mb-20 tracking-tight sm:px-10">
      Projects
    </h1>

    <div class="container mx-auto grid gap-36 sm:gap-52">
      {
        projects.map((project, index) => (
          <ProjectArticle
            projectTitle={project.data.title}
            projectDescription={project.data.description}
            projectImage={projectImage1}
            leftAlign={index % 2 === 0}
            techStack={project.data.techStack}
            allBadges={badges}
            slug={project.data.slug}
          />
        ))
      }
    </div>

    <!-- WHITESPACE -->
    <div class="h-[150px] sm:h-[200px]"></div>
  </main>
</Layout>
