---
import { Image } from "astro:assets";
import amazon from "../../assets/images/gallery/amazon.jpg";
import newZealand from "../../assets/images/gallery/new-zealand.jpg";
import tokyo from "../../assets/images/gallery/tokyo.jpg";
import bolivia from "../../assets/images/gallery/bolivia.jpg";
import huacachina from "../../assets/images/gallery/huacachina.jpg";
import copacabana from "../../assets/images/gallery/copacobana.jpg";
import roysPeak from "../../assets/images/gallery/roys-peak.jpg";
import machu from "../../assets/images/gallery/machu.jpg";
import rio from "../../assets/images/gallery/rio.jpg";
import patagonia from "../../assets/images/gallery/patagonia.jpg";
---

<div
  aria-label="Travel photo gallery"
  class="gallery-container lg:basis-full grid grid-cols-4 grid-rows-8 gap-2 h-[1000px] lg:h-[800px] lg:rotate-12 lg:-translate-y-32 lg:translate-x-24 xl:translate-x-32"
>
  <!-- row 1 -->
  <div
    class="col-span-1 row-span-2 row-start-2 col-start-1 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={amazon}
      alt="amazon rainforest"
      height={250}
      width={188}
    />
  </div>
  <div
    class="col-span-2 row-span-2 row-start-1 col-start-2 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={newZealand}
      alt="new zealand"
      height={194}
      width={370}
    />
  </div>
  <div
    class="col-span-1 row-span-2 row-start-2 col-start-4 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={tokyo}
      alt="tokyo"
      height={250}
      width={188}
    />
  </div>
  <!-- row 2 -->
  <div
    class="col-span-1 row-span-2 row-start-4 col-start-1 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={bolivia}
      alt="bolivia"
      height={250}
      width={188}
    />
  </div>
  <div
    class="col-span-2 row-span-2 row-start-3 col-start-2 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={huacachina}
      alt="huacachina"
      height={194}
      width={370}
    />
  </div>
  <div
    class="col-span-1 row-span-2 row-start-4 col-start-4 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={copacabana}
      alt="copacabana"
      height={250}
      width={188}
    />
  </div>

  <!-- row 3 -->
  <div
    class="col-span-1 row-span-2 row-start-6 col-start-1 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={roysPeak}
      alt="roys peak"
      height={250}
      width={188}
    />
  </div>
  <div
    class="col-span-2 row-span-2 row-start-5 col-start-2 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={machu}
      alt="machu picchu"
      height={194}
      width={370}
    />
  </div>
  <div
    class="col-span-1 row-span-2 row-start-6 col-start-4 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={rio}
      alt="rio"
      height={250}
      width={188}
    />
  </div>
  <!-- row 4 -->
  <div
    class="col-span-2 row-span-2 row-start-7 col-start-2 rounded-lg overflow-clip"
  >
    <Image
      class="w-full h-full object-cover"
      src={patagonia}
      alt="patagonia"
      height={194}
      width={370}
    />
  </div>
</div>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const images = document.querySelectorAll(".gallery-container div");

  gsap.from(images, {
    opacity: 0,
    y: 60,
    stagger: 0.3,
    duration: 2,
    ease: "sine.out",
    scrollTrigger: {
      trigger: ".gallery-container",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
  });
</script>
