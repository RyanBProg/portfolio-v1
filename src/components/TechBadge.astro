---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  img: ImageMetadata;
  alt: string;
  bgCol: string;
}

const { title, img, alt, bgCol } = Astro.props;
---

<span class={`p-2 rounded-lg ${bgCol} flex gap-2 items-center`}>
  <Image class="h-5 w-5" src={img} alt={alt} height="20" width="20" />
  {title}
</span>
