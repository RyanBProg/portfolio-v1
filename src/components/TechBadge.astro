---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  img: ImageMetadata;
  alt: string;
}

const { title, img, alt } = Astro.props;
---

<span class="p-2 rounded-lg bg-neutral-500/10 flex gap-2 items-center">
  <Image class="h-5 w-auto" src={img} alt={alt} height="20" width="20" />
  {title}
</span>
