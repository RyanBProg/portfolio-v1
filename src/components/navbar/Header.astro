    opacity: 1;
    left: 0;
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
    -webkit-transition: 0.25s ease-in-out;
    -moz-transition: 0.25s ease-in-out;
    -o-transition: 0.25s ease-in-out;
    transition: 0.25s ease-in-out;
  }

  #nav-button-icon span:nth-child(1) {
    top: 0px;
  }

  #nav-button-icon span:nth-child(2) {
    top: 13px;
  }

  #nav-button-icon span:nth-child(3) {
    top: 26px;
  }

  #nav-button-icon.open span:nth-child(1) {
    top: 13px;
    -webkit-transform: rotate(135deg);
    -moz-transform: rotate(135deg);
    -o-transform: rotate(135deg);
    transform: rotate(135deg);
  }

  #nav-button-icon.open span:nth-child(2) {
    opacity: 0;
    left: -60px;
  }

  #nav-button-icon.open span:nth-child(3) {
    top: 13px;
    -webkit-transform: rotate(-135deg);
    -moz-transform: rotate(-135deg);
    -o-transform: rotate(-135deg);
    transform: rotate(-135deg);
  }
</style>

<script>
  // Get Lenis instance from window
  declare global {
    interface Window {
      lenis: any;
    }
  }

  const toggleNavButton = document.getElementById("toggle-nav-btn");
  const navButtonIcon = document.getElementById("nav-button-icon");
  const navList = document.getElementById("nav-list");
  const navLinks = document.querySelectorAll("#nav-link");
  const slides = document.querySelectorAll("[id$='-slide']");
  let isNavOpen = false;

  // Handle clicks outside the menu
  const handleClickOutside = (event: MouseEvent) => {
    // Type guard to ensure target is Element
    const target = event.target as Element;

    if (
      isNavOpen &&
      navList &&
      !navList.contains(target) &&
      toggleNavButton &&
      !toggleNavButton.contains(target)
    ) {
      closeNav();
    }
  };

  // Handle Escape key press
  const handleEscKeyPress = (event: KeyboardEvent) => {
    if (event.key === "Escape" && isNavOpen) {
      closeNav();
    }
  };

  // Close navigation function
  const closeNav = () => {
    isNavOpen = false;

    // Re-enable scrolling with Lenis
    window.lenis?.start();

    navButtonIcon?.classList.remove("open");
    navList?.classList.add("-translate-y-full");
    navList?.classList.remove("translate-y-0");

    navLinks.forEach((link) => {
      link.setAttribute("tabindex", "-1");
    });

    toggleNavButton?.setAttribute("aria-expanded", "false");
  };

  // Toggle navigation function
  toggleNavButton?.addEventListener("click", () => {
    isNavOpen = !isNavOpen;

    if (isNavOpen) {
      // Scroll to top of screen
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });

      // Stop Lenis scrolling
      window.lenis?.stop();

      navButtonIcon?.classList.add("open");
      navList?.classList.add("translate-y-0");
      navList?.classList.remove("-translate-y-full");
    } else {
      closeNav();
    }

    navLinks.forEach((link) => {
      link.setAttribute("tabindex", isNavOpen ? "0" : "-1");
    });

    toggleNavButton.setAttribute("aria-expanded", isNavOpen ? "true" : "false");
  });

  // Nav gallery slider
  navLinks.forEach((link) => {
    link.addEventListener("mouseenter", () => {
      const slideId = link.getAttribute("data-slide");
      const slide = document.getElementById(slideId!);

      // Reset all slides
      slides.forEach((s) => s.classList.add("translate-x-full"));

      // Show current slide
      if (slide) {
        slide.classList.remove("translate-x-full");
      }
    });
  });

  // Reset slides when mouse leaves navigation area
  // navList?.addEventListener("mouseleave", () => {
  //   slides.forEach((slide) => slide.classList.add("translate-x-full"));
  // });

  // Nav links hover color change
  navLinks.forEach((hoverlink) => {
    hoverlink.addEventListener("mouseenter", () => {
      navLinks.forEach((link) => {
        if (link === hoverlink) {
          link.classList.remove("text-neutral-500");
          link.classList.add("text-black");
        } else {
          link.classList.remove("text-black");
          link.classList.add("text-neutral-500");
        }
      });
    });

    hoverlink.addEventListener("mouseleave", () => {
      const currentPath = window.location.pathname;

      navLinks.forEach((link) => {
        if (link.getAttribute("href") === currentPath) {
          link.classList.add("text-neutral-500");
          link.classList.remove("text-black");
        } else {
          link.classList.remove("text-neutral-500");
          link.classList.add("text-black");
        }
      });
    });
  });

  // Add event listeners
  document.addEventListener("mousedown", handleClickOutside);
  document.addEventListener("keydown", handleEscKeyPress);
</script>

